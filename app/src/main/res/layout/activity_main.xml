<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:background="#E6E2E2"
        android:layout_height="match_parent"
        tools:context="fr.epf.movieenjoyer.Activities.HomeActivity"
        android:orientation="vertical">

    <ProgressBar
            android:id="@+id/progressBar"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:minHeight="50dp"
            android:layout_gravity="center"
            android:layout_marginTop="280dp"
            android:layout_marginBottom="300dp"
            android:minWidth="50dp"/>

    <ScrollView android:layout_width="match_parent"
                android:layout_height="match_parent">

        <LinearLayout android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:orientation="vertical">

            <FrameLayout
                    android:id="@+id/container"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content" />

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:id="@+id/textviewmore"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="En ce moment"
                      android:layout_marginBottom="-40dp"
                      android:textColor="#1a1a1a"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:textSize="30sp"/>

            <Button
                    android:id="@+id/viewMore1"
                    android:text="Voir plus"
                    android:background="@null"
                    android:layout_gravity="right"
                    android:textColor="#0F4D45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/recycler1"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Populaires"
                      android:layout_marginBottom="-40dp"
                      android:layout_marginTop="30dp"
                      android:gravity="center"
                      android:textColor="#1a1a1a"
                      android:textStyle="bold"
                      android:textSize="30sp"/>

            <Button
                    android:id="@+id/viewMore2"
                    android:text="Voir plus"
                    android:background="@null"
                    android:layout_gravity="right"
                    android:textColor="#0F4D45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/recycler2"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Bientôt en salle"
                      android:layout_marginBottom="-40dp"
                      android:textColor="#1a1a1a"
                      android:textStyle="bold"
                      android:gravity="center"
                      android:textSize="30sp"
                      android:layout_marginLeft="10dp"
                      android:layout_marginTop="40dp"/>

            <Button
                    android:id="@+id/viewMore3"
                    android:text="Voir plus"
                    android:background="@null"
                    android:layout_gravity="right"
                    android:textColor="#0F4D45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/recycler3"/>

            <TextView android:layout_width="match_parent"
                      android:layout_height="wrap_content"
                      android:text="Les mieux notés"
                      android:layout_marginBottom="-40dp"
                      android:layout_marginTop="30dp"
                      android:textColor="#1a1a1a"
                      android:gravity="center"
                      android:textStyle="bold"
                      android:textSize="30sp"/>

            <Button
                    android:id="@+id/viewMore4"
                    android:text="Voir plus"
                    android:background="@null"
                    android:layout_gravity="right"
                    android:textColor="#0F4D45"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"/>

            <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:id="@+id/recycler4"/>
        </LinearLayout>
    </ScrollView>
</LinearLayout>
